# Define
#  - function: function to be called from analysis_functions.py for calculation of analysis measure
#  - sampling: sampling type: tokens, sentences, batches
#  - plot_style: plot style for each metric: boxplot, line, violinplot
#  - plot_title: titles for plots
{
"sent_length": {"function": "calc_sentence_length",
                "plot_title": "Sentence length (in words)",
                "plot_style": "boxplot",
                "sampling": "sentences"},
"ttr": {"function": "calc_type_token_ratio",
        "plot_title": "Type-token ratio",
        "plot_style": "boxplot",
        "sampling": "tokens"},
"lm_perplexity": {"function": "calc_lm_perplexity",
                  "plot_title": "Word perplexity",
                  "plot_style": "boxplot",
                  "sampling": "batches"},
"voc_rank_diff": {"function": "calc_vocabulary_ranks_difference",
                  "plot_title": "Vocabulary rank difference",
                  "plot_style": "boxplot",
                  "sampling": "tokens"},
"phrase_per_sent": {"function": "calc_root_dep_counts",
                    "plot_title": "Mean number of dependencies of the root per sentence",
                    "plot_style": "boxplot",
                    "sampling": "sentences"},
"verb_per_sent": {"function": "calc_verb_per_sentence",
                  "plot_title": "Mean number of verbs per sentence",
                  "plot_style": "boxplot",
                  "sampling": "sentences"},
"n_words": {"function": "calc_number_of_words",
            "plot_title": "Number of tokens in dataset",
            "plot_style": "boxplot",
            "sampling": null},
"voc_size": {"function": "calc_size_of_vocabulary",
             "plot_title": "Size of vocabulary",
             "plot_style": "boxplot",
             "sampling": null},
"voc_size_sampled": {"function": "calc_size_of_vocabulary",
